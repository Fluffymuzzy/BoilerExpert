include header
include navShoppingCart
section(class="product_page_detail")
    each value, index in goods
        div(class="container prod_page")
            div(class="imagery")    
                img(src= value["goods_image"] alt="" class="product_page_img")
            div(class="detail")    
                h1= value["goods_name"]
                h2= value["goods_cost"] 
                h2 Характеристики  
                div(class="product_page_options")    
                    div(class="options_wrap")
                        div Гарантия
                            h3= value["goods_warranty"]
                        div Мощность нагревательного елемента    
                            h3= value["goods_heatingPower"]
                        div Тип нагревательного елемента    
                            h3= value["goods_heatingType"]
                        div Габариты
                            h3= value["goods_dimensions"]    
                div(class="product-links")
                    i(class="bi bi-dash-lg remove-from-cart"  data-id= value["id"])
                    i(class="bi bi-plus-lg add-to-cart" data-id= value["id"])
    include footer                

