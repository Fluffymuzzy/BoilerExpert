div(class="pricing-area pt-110" id="catalog")
    div(class="container")
        div(class="row justify-content-center")    
            div(class="col-xl-6 col-lg-7")
                div(class="section-title text-center pb-30")
                    h1(class="") Нові надходження
            div(class="row justify-content-center wow bounceIn") 
                each value, index in goods
                    div(class="col-lg-4 col-md-7 col-sm-9")
                        div(class="product-box text-center")
                            div(class="image-product")
                                img(src= value["goods_image"] class="img-product")
                            div(class="product-detail")
                                div(class="product-model")
                                    span= value["goods_name"]
                                    p(class="article")= value["goods_article"]
                                div(class="product-price") UAH &nbsp;
                                    span(class="price")= value["goods_cost"]
                            div(class="product-links")        
                                a(href="/catalog/product/"+ value["id"] class="main-btn main-btn-link") Більше інфи



